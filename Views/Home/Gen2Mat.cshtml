@model Matrices.ViewModels.MatrixViewModel
@{
    ViewData["Title"] = "Gen2 Mat";
    ViewData["CurrentPage"] = Context.Request.Path;
    string action = Model.Accion;
}

<div class="text-center row">
    <div class="col">
        <h1 class="display-4">Escriba las Matrices</h1>
    </div>
</div>
<div class="text-center row">
    <form asp-action="@action" method="post">
        <p>Matriz A</p><br>
        <input type="hidden" class="form-control" name="RowA" value="@Model.RowA" >
        <input type="hidden" class="form-control" name="ColA" value="@Model.ColA" >
        <input type="hidden" class="form-control" name="RowB" value="@Model.RowB" >
        <input type="hidden" class="form-control" name="ColB" value="@Model.ColB" >
        @for (int i = 0; i < Model.RowA; i++)
        {
            <div class="row">
            @for (int j = 0; j < Model.ColA; j++)
            {
                <div class="col">
                    <small class="text-secondary">A@(i)@(j)</small>
                    <input type="text" class="form-control" name="Data" value="0" >
                </div> 
            }
            <br>
            </div>
        }
        <br>
        <p>Matriz B</p><br>
        @for (int i = 0; i < Model.RowB; i++)
        {
            <div class="row">
            @for (int j = 0; j < Model.ColB; j++)
            {
                <div class="col">
                    <small class="text-secondary">B@(i)@(j)</small>
                    <input type="text" class="form-control" name="Data" value="0" >
                </div> 
            }
            <br>
            </div>
        }
        <br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-primary mb-2">Mandar</button>
    </form>
</div>