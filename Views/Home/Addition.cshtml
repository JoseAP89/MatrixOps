@model Matrices.Models.InfoMat
@{
    ViewData["Title"] = "Sum Mat";
    ViewData["CurrentPage"] = Context.Request.Path;
}

<div class="text-center">
    <h2 class="display-4">Matrix Addition</h2>
    <form asp-action="Addition" method="post" class="myform">
        <input type="hidden" asp-for="Type" value="0">
        <div class="form-group">
            <label >Matrix A</label>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="#Filas" asp-for="RowA">
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="#Columnas" asp-for="ColA">
                </div>
            </div>
            <label >Matrix B</label>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="#Filas" asp-for="RowB">
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="#Columnas" asp-for="ColB">
                </div>
            </div>
        </div>
        <br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-primary mb-2">Mandar</button>
    </form>
</div>